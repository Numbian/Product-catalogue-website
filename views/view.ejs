<% include partials/header %>

<div class="container ">

<div class="subsiteSubject my-4">	
<h1><%=product.name%></h1>
</div>

  <div class="section mt-3">
	  <div class="row whitebox px-5 py-3">
		  <div class='col-12 col-md-6 p-1 '>

		        <img style="width:100%; height:100%;  object-fit: contain;"
		             <%if(product.images.length>0){%>
		             src="<%=product.images[0].URL%>" alt="<%=product.images[0].alt%>" 
		             <%}%>
		             >
		  </div>

		  <div class='col-12 col-md-6 p-1'>
		            <div class="card-img-top" style=" height:400px; ">

<img style="width:100%; height:100%; object-fit: contain;
                    background-color: white;" src="<%=product.graph%>" alt="<%=product.name%>" >
		            </div> 
		  </div>

<div class='col-12 p-1'>
		           <hr class="style-one">
		           <div style="height:100%; text-align: left; ">
					<h5>Description</h5>
		           	<p><%-product.description%></p>
		           </div> 
		  </div>

<div class='col-12 p-1'>

		           <hr class="style-one">           
		           <div style="height:100%; text-align: left; ">
                   <h5>Downloads</h5>
                  
                   <%if(product.downloadFiles.length>0){ 
                   
                   product.downloadFiles.forEach(function(item){ %>
                   <div>
                   <a href="<%=item.URL%>"><%=item.name%></a>
                   </div>
                   <%})%>
				   <%}else{%>
				   No files to download
				   <%}%>
				  
   					


		           </div> 
		  </div>
</div>
</div>

<% include partials/footer %>
